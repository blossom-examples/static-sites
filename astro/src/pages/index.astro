---
import '@fontsource/inter';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blossom - Modern App Deploy Platform</title>
    <style>
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --text: #1f2937;
        --text-light: #6b7280;
        --background: #ffffff;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        color: var(--text);
        line-height: 1.5;
        background: var(--background);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        text-align: center;
      }

      .hero-content {
        max-width: 800px;
        margin-bottom: 3rem;
      }

      h1 {
        font-size: 4rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .subtitle {
        font-size: 1.5rem;
        color: var(--text-light);
        margin-bottom: 2rem;
      }

      .cta-button {
        display: inline-flex;
        align-items: center;
        background: var(--primary);
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.25rem;
        transition: all 0.2s;
        margin-right: 1rem;
      }

      .cta-button span {
        font-size: 1.5rem;
        margin-right: 0.75rem;
      }

      .cta-button-docs {
        background: transparent;
        border: 2px solid var(--primary);
        color: var(--primary);
      }

      .cta-button:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
      }

      .cta-button-docs:hover {
        background: var(--primary);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
      }

      .hero-buttons {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
      }

      .features {
        padding: 6rem 0;
        text-align: center;
      }

      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
      }

      .feature-card {
        padding: 2rem;
        border-radius: 1rem;
        background: white;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        transition: transform 0.2s;
        text-align: center;
      }

      .feature-card:hover {
        transform: translateY(-5px);
      }

      .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: var(--primary);
      }

      .frameworks {
        padding: 6rem 0;
        background: #f8fafc;
      }

      .framework-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
      }

      .framework-card {
        padding: 2rem;
        text-align: center;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      }

      .framework-card img {
        width: 64px;
        height: 64px;
        margin-bottom: 1rem;
      }

      .cost-savings {
        padding: 6rem 0;
        text-align: center;
        background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
      }

      .cost-savings h2 {
        margin-bottom: 1.5rem;
        font-size: 2.5rem;
      }

      .cost-savings p {
        margin-bottom: 2rem;
        font-size: 1.25rem;
        color: var(--text-light);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .view-all {
        margin-top: 3rem;
        text-align: center;
      }

      .view-all a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
      }

      .view-all a:hover {
        text-decoration: underline;
      }

      .cta-section {
        padding: 4rem 0;
        text-align: center;
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      }

      .cta-section h2 {
        margin-bottom: 1.5rem;
        font-size: 2.5rem;
      }

      .cta-section p {
        margin-bottom: 2rem;
        font-size: 1.25rem;
        color: var(--text-light);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      @media (max-width: 768px) {
        h1 {
          font-size: 2.5rem;
        }

        .subtitle {
          font-size: 1.25rem;
        }

        .hero-buttons {
          flex-direction: column;
          gap: 1rem;
        }

        .cta-button {
          margin-right: 0;
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </head>
